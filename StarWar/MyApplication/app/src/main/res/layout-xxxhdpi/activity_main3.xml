<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="5dp">

            <TextView
                android:id="@+id/q_name"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="FULL NAME"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/q_height"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="HEIGHT"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/q_homeworld"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="HOMEWORLD"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/q_gender"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="GENDER"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_homeworld"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/q_birth"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="BIRTH YEAR"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_gender"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/q_mass"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="MASS"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_height"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/q_eye"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="EYE COLOR"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_mass"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/q_skin"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="SKIN COLOR"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/q_hair"
                android:layout_width="99dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="HAIR COLOR"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/q_skin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/a_skin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_skin"
                app:layout_constraintStart_toStartOf="@+id/q_skin"
                app:layout_constraintTop_toBottomOf="@+id/q_skin" />

            <TextView
                android:id="@+id/a_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_birth"
                app:layout_constraintStart_toStartOf="@+id/q_birth"
                app:layout_constraintTop_toBottomOf="@+id/q_birth" />

            <TextView
                android:id="@+id/a_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_hair"
                app:layout_constraintStart_toStartOf="@+id/q_hair"
                app:layout_constraintTop_toBottomOf="@+id/q_hair" />

            <TextView
                android:id="@+id/a_homeworld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_homeworld"
                app:layout_constraintStart_toStartOf="@+id/q_homeworld"
                app:layout_constraintTop_toBottomOf="@+id/q_homeworld" />

            <TextView
                android:id="@+id/a_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_gender"
                app:layout_constraintStart_toStartOf="@+id/q_gender"
                app:layout_constraintTop_toBottomOf="@+id/q_gender" />

            <TextView
                android:id="@+id/a_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_name"
                app:layout_constraintStart_toStartOf="@+id/q_name"
                app:layout_constraintTop_toBottomOf="@+id/q_name" />

            <TextView
                android:id="@+id/a_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_height"
                app:layout_constraintStart_toStartOf="@+id/q_height"
                app:layout_constraintTop_toBottomOf="@+id/q_height" />

            <TextView
                android:id="@+id/a_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_eye"
                app:layout_constraintStart_toStartOf="@+id/q_eye"
                app:layout_constraintTop_toBottomOf="@+id/q_eye" />

            <TextView
                android:id="@+id/a_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/q_mass"
                app:layout_constraintStart_toStartOf="@+id/q_mass"
                app:layout_constraintTop_toBottomOf="@+id/q_mass" />

            <View
                android:id="@+id/view"
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#978F8F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a_skin" />

            <View
                android:id="@+id/view2"
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#978F8F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a_mass" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Films"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/film_rec" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/film_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

</androidx.constraintlayout.widget.ConstraintLayout>